FROM alpine:3.7

MAINTAINER Yannoff <https://github.com/yannoff>

LABEL author="Yannoff <https://github.com/yannoff>" license="MIT" description="A leaf-weight PHP image with basic php extensions" 


COPY docker-php-entrypoint /usr/local/bin/

RUN apk --no-cache add php5 php5-pdo php5-pdo_mysql php5-pdo_pgsql php5-intl php5-curl php5-json php5-opcache php5-xml php5-bcmath; \
    \
    ln -s /usr/bin/php /usr/bin/php 2>/dev/null || true

EXPOSE 80

CMD [ "php" ]

ENTRYPOINT [ "docker-php-entrypoint" ]
