FROM alpine:3.7

MAINTAINER Yannoff <https://github.com/yannoff>

COPY docker-php-entrypoint /usr/local/bin/

RUN apk --no-cache add php5-fpm php5-pdo php5-pdo_mysql php5-pdo_pgsql php5-intl php5-curl php5-json php5-opcache php5-xml php5-bcmath; \
    \
    ln -s /usr/bin/php-fpm5 /usr/bin/php-fpm 2>/dev/null || true

EXPOSE 9000

CMD [ "php-fpm5" ]

ENTRYPOINT [ "docker-php-entrypoint" ]

WORKDIR [ "/var/www/html" ]

